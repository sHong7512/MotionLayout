<?xml version="1.0" encoding="utf-8"?>
<com.shong.motionlayout.DrawerContent xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/item_main_scene">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_splash"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <include
                    android:id="@+id/userInfoItem"
                    layout="@layout/item_userinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="60dp"
                    app:layout_collapseMode="parallax" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_collapseMode="pin">

                </com.google.android.material.appbar.MaterialToolbar>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="18dp"
                    app:layout_collapseMode="pin">

                    <ImageButton
                        android:id="@+id/sideMenu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/basic_ripple"
                        android:src="@drawable/icon_menu"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/topLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                            android:id="@+id/arrowLeftTop"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/basic_ripple"
                            android:src="@drawable/arrow_left" />

                        <TextView
                            android:id="@+id/topText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:gravity="center"
                            android:text="2021년 7월"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <ImageButton
                            android:id="@+id/arrowRightTop"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/basic_ripple"
                            android:src="@drawable/arrow_right" />

                    </LinearLayout>

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/basic_ripple"
                        android:src="@drawable/icon_search"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <Button
            android:id="@+id/deltaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deltaRelative Motion Go"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</com.shong.motionlayout.DrawerContent>